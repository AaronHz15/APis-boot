<?php
// Configuración
$servidor   = "localhost";
$usuario    = "root";
$password   = "";
$base_datos = "uttec_contacto"; // <--- Nuevo nombre aquí

$conexion = mysqli_connect($servidor, $usuario, $password, $base_datos);

if (!$conexion) {
    die("Error de conexión: " . mysqli_connect_error());
}

// Captura de datos respetando los nombres del HTML
$nombre   = mysqli_real_escape_string($conexion, $_POST['nombre']);
$correo   = mysqli_real_escape_string($conexion, $_POST['correo']);
$telefono = mysqli_real_escape_string($conexion, $_POST['telefono']);
$mensaje  = mysqli_real_escape_string($conexion, $_POST['mensaje']);

$sql = "INSERT INTO mensajes (nombre, correo, telefono, mensaje) 
        VALUES ('$nombre', '$correo', '$telefono', '$mensaje')";

if (mysqli_query($conexion, $sql)) {
    echo "<script>
            alert('¡Datos guardados en uttec_contacto!');
            window.location.href='index.html'; 
            </script>";
} else {
    echo "Error: " . mysqli_error($conexion);
}

mysqli_close($conexion);
?>